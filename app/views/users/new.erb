<h1> Hello New User, you are valued here. Please sign up. </h1>

<form action='/users' method='POST'>
	<input type="text" name="username" placeholder="Enter username" value='<%= @user.username %>' required>
	<input type="text" name="name" placeholder="Enter name" value='<%= @user.name %>'required>
	<input type="text" name="email" placeholder="Enter email" value='<%= @user.email %>' required>
	Password
	<input type="password" name="password" placeholder="password" required>
	<input type="password" name="password_confirmation" placeholder= "confirm password" required>
	<input type="submit" value="Sign up">
</form>